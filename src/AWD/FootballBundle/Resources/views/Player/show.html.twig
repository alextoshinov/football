{% extends 'AWDFootballBundle::layout.html.twig' %}
{% block title %}Player Profile{% endblock %}
{% block nav %}
    <ul class="nav navbar-nav">
            <li ><a href="{{ path('awd_football_homepage') }}">Home</a></li>
            <li><a href="{{ path('awd_team') }}">Teams</a></li>
            <li class="active"><a href="{{ path('awd_player') }}">Players</a></li>
            <li><a href="{{ path('awd_game') }}">Games</a></li>
            
          </ul>
{% endblock %}
{% block content%}
    <h1>Player profile</h1>

    <table class="table table-condensed">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ entity.firstname }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ entity.lastname }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ entity.age }}</td>
            </tr>
            <tr>
                <th>Has red card</th>
                <td>{% if entity.ispenalized %}YES{% else %}NO{% endif %}</td>
            </tr>
            <tr>
                <th>Is_activated</th>
                <td>{% if entity.isactivated %}YES{% else %}NO{% endif %}</td>
            </tr>
             <tr>
                <th>Team</th>
                <td>{{ entity.team }}</td>
            </tr>
            <tr>
                <th>Expires_at</th>
                <td>{{ entity.expiresat|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>


        <a href="{{ path('awd_player') }}"  class="btn btn-primary">
            Back to the list
        </a>

        <a href="{{ path('awd_player_edit', { 'id': entity.id }) }}" class="btn btn-success">
            Edit
        </a>
    {{ form(delete_form) }}
{% endblock %}
